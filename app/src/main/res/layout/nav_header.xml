<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="bottom"
    android:paddingStart="12dp"
    android:background="@drawable/imageblue"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:paddingLeft="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/myimage"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txtEmail"
            android:contentDescription="@string/app_name"
            android:layout_marginEnd="16dp"
            app:civ_border_color="@color/purple_700"
            app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/aldrich"
        android:text="Shahzod Toshboyev"
        android:textColor="@color/purple_700"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/txtNumber"
        app:layout_constraintStart_toEndOf="@id/myImage"
        app:layout_constraintTop_toTopOf="@id/myImage" />

            <TextView
                android:id="@+id/txtNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+998 (99) 670 03 25"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/txtName"
                app:layout_constraintStart_toStartOf="@id/txtName"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="@id/myImage"
                android:textStyle="italic"
                android:textColor="@color/purple_700"/>


        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shakhzodtoshboyev010299@gmail.com"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@id/myImage"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/purple_700"/>



</androidx.constraintlayout.widget.ConstraintLayout>